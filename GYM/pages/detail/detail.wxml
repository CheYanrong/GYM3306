<view class="container">
<view class="ar_coverpath">
    <image src="{{ detailItem.p_img}}" mode="aspectFill"></image>
</view>
<view class="ar_cont">
    <text class="ar_cont_h1">{{ detailItem.p_title}}</text>
    <text class="ar_cont_price">￥：{{ detailItem.p_sale}} </text>
    <text>   
      {{ detailItem.p_step}}
    </text>
   
    <view class="ar_line"></view>
    <text class="ar_cont_h1">【详情描述】</text>
    <text>
   {{detailItem.p_tip}}
    </text>
    <button class="ar_book" bindtap="bookTap">立即预定</button>
</view>

</view>